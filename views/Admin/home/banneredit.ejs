<%- include('../sidebar.ejs') %>
<%- include('../header.ejs') %>



<div class="card-body">
   <form method="post"  action="/update/<%=prop_edit._id%>" enctype="multipart/form-data">


    <table id="bootstrap-data-table-export" class="table table-striped table-bordered" >
    
            <tbody>
             
           <tr><th>Image</th></tr>
           <tr><td><div class="w-50"><input type="file" name="front_image"class="form-control"/><img src="<%=prop_edit.front_image.url %>" alt=""style="max-width: 40%;"></div></td></tr>
           <tr><th> Other Image   </th></tr>
           <tr><td>  <input type="file" name="images"class="form-control"/>
            
            <% for(let element of prop_edit.images){ %>
              <a href="/admin/dashboard/banneredit/<%= element.public_id%>/<%= prop_edit._id %>"> 
             <i class="fa fa-trash"></i>
            <img src="<%= element.url %>" alt=""style="max-width: 10%;">
        <% } %></a></td></tr>
           <tr><th>Property Name</th></tr>
           <tr><td><input type="text" name="property_name" class="form-control" value="<%=prop_edit.property_name%>" ></td></tr>
    
           <tr><th>State</th></tr>
           <tr><td> <input type="text" name="state"class="form-control" value="<%= prop_edit.state%>"/></td></tr>
    
           <tr><th>City</th></tr>
           <tr><td>       <input type="text" name="city"class="form-control" value="<%= prop_edit.city%>"/></td></tr>
    
           <tr><th>Address</th></tr>
           <tr><td>       <input type="text" name="address"class="form-control" value="<%= prop_edit.address%>"/></td></tr>
    
           <tr><th>description</th></tr>
           <tr><td>       <input type="text" name="descripation"class="form-control" value="<%=prop_edit.descripation%>"/></td></tr>
    
           <tr><th>Price</th></tr>
           <tr><td>       <input type="number" name="price"class="form-control" value="<%=prop_edit.price%>"/></td></tr>
    
           <tr><th>type</th></tr>
           <tr><td>       <input type="text" name="type"class="form-control" value="<%= prop_edit.type%>"/></td></tr>
    
           <tr><th>Area</th></tr>
           <tr><td>       <input type="number" name="area"class="form-control" value="<%=prop_edit.area%>"/></td></tr>
    
           <tr><th>Numbers of Bedroom</th></tr>
           <tr><td>       <input type="number" name="bedroom"class="form-control" value="<%=prop_edit.bedroom%>"/></td></tr>
    
           <tr><th>Number of bathroom</th></tr>
           <tr><td>       <input type="number" name="bathroom"class="form-control" value="<%=prop_edit.bathroom%>"/></td></tr>
    
           <tr><th>Number of Garage</th></tr>
           <tr><td>       <input type="number" name="garage"class="form-control" value="<%= prop_edit.garage%>"/></td></tr>
    
           <tr><th>Amenities</th></tr>
           <tr><td><input type="text" name="amenities"class="form-control" value="<%=prop_edit.amenities%>"/>
            <div class="mb-3">
               <div>
                   <label for="">Amenities</label>
               </div>
               <div class="">
                   <div class="form-check form-check-inline">
                       <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="Balcony" name="amenities">
                       <label class="form-check-label" for="inlineCheckbox1">Balcony</label>
                     </div>
                     <div class="form-check form-check-inline">
                       <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="Cable" name="amenities">
                       <label class="form-check-label" for="inlineCheckbox2">Cable Tv</label>
                     </div>
                     <div class="form-check form-check-inline">
                       <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="Deck" name="amenities">
                       <label class="form-check-label" for="inlineCheckbox3">Deck</label>
                     </div>
                     <div class="form-check form-check-inline">
                       <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="Parking" name="amenities">
                       <label class="form-check-label" for="inlineCheckbox3">Parking</label>
                     </div>
                     <div class="form-check form-check-inline">
                       <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="Tennis" name="amenities">
                       <label class="form-check-label" for="inlineCheckbox3">Tennis Courts</label>
                     </div>
                     <div class="form-check form-check-inline">
                       <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="Internet" name="amenities">
                       <label class="form-check-label" for="inlineCheckbox3">Internet</label>
                     </div>
                 </div>
               </div></td></tr>
    
        

         
            </tbody>
              
          </tbody>
      </table>
      <button type="submit" class="btn btn-primary">Update</button>
   </form>
</div>

<%- include('../footer') %>